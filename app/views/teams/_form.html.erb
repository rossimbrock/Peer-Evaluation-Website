<%= form_with(model: team) do |form| %>

  <p>Team Name: <%= form.text_field :name %></p>
  <p>Course ID: <%= form.select :course_id , Course.pluck(:id) %></p>

  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
